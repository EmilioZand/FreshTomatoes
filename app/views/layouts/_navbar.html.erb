<div class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <div class="navbar-brand" >
        <span id="sidebar-toggle" class="glyphicon glyphicon-menu-hamburger" onClick="sidebar.toggle()"/>
      </div>
      <a class="navbar-brand" href="/">FreshTomatoes</a>
    </div>
    <div class="navbar-right">
      <%= form_tag(movies_index_path, :method => "get", class: "navbar-search navbar-form") do %>
        <div class="input-group search-bar">
          <%= text_field_tag :search, params[:search], placeholder: "Search Movies", 
              class:"search-bar form-control form-inverse pull-right" %>
          <span class="input-group-btn">
            <button type="submit" class="btn btn-default">
              <span class="glyphicon glyphicon-search">
                <span class="sr-only">Search</span>
              </span>
            </button>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>