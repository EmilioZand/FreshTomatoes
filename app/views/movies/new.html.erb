<%= form_for :movie, url: movies_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :image_url, 'Movie Poster URL' %><br>
    <%= f.text_field :image_url %>
  </p>

  <p>
    <%= f.label :release_date %><br>
    <%= f.date_field :release_date %>
  </p>

  <p>
    <%= f.label :rating, 'Rating (0-5.0)' %><br>
    <%= f.number_field :rating, max: 5, min: 0, step: 0.5 %>
  </p>

  <p>
    <%= f.label :genre %><br>
    <%= f.select :genre, Movie.genres.keys %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>